{
    "type": "APL",
    "version": "1.0",
    "theme": "dark",
    "import": [],
    "resources": [],
    "styles": {},
    "layouts": {},
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "type": "Frame",
                "width": "100vw",
                "height": "100vh",
                "backgroundColor": "rgb(240, 251, 255)",
                "items": [
                    {
                        "type": "Container",
                        "width": "100vw",
                        "height": "100vh",
                        "alignItems": "center",
                        "justifyContent": "spaceAround",
                        "items": [
                            {
                                "type": "Text",
                                "width": "65%",
                                "textAlign": "center",
                                "paddingTop": "10dp",
                                "fontSize" : "5vw",
                                "text": "${payload.aplData.message}",
                                "fontFamily": "Lucida Sans Unicode, Lucida Grande, sans-serif",
                                "color": "rgb(96, 102, 107)"
                            },
                            {
                                "type": "Image",
                                "source": "${payload.aplData.image}",
                                "height": "40vh",
                                "width": "30vw",
                                "scale": "best-fit"
                            }
                        ]
                    }
                ]
            }
        ]
    }
}